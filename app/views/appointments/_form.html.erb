<ul>
<%= form_for @appointment do |f| %>
<%= f.label :dog_id %>
<%= f.collection_select :dog_id, Dog.all, :id, :name %>
<%= f.label :walker_id %>
<%= f.collection_select :walker_id, Walker.all, :id, :user_id %>
<%= f.label :datetime %>
<%= f.text_field :datetime %>

<%= f.time_select :comment,
  :combined => true,
  :default => Time.now.change(:hour => 6, :min => 00),
  :minute_interval => 15,
  :time_separator => "",
  :start_hour => 6,
  :start_minute => 00,
  :end_hour => 19,
  :end_minute => 00
%>

<%= f.submit %>
<% end %>
</ul>


