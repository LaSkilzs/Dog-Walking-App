<div class="text-center">
  <h1>Appointments</h1>
  </div>

<table class="table table-hover">
  <thead>
    <tr class="bg-primary">
      <th scope="col">#</th>
      <th scope="col">Dog</th>
      <th scope="col">Service</th>
      <th scope="col">Date</th>
      <th scope="col">Time</th>
      <th scope="col">Status</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <ul>
    <% @appointments.each.with_index do |app, i| %>
    <tr>
      <th scope="row"> <%= app.id %></th>
      <td><%= app.dog.name %></td>
      <td><%= app.dog.name %></td>
      <td><%= app.date.strftime('%') %></td>
      <td><%= link_to app.start_time.strftime("%-I:%M:%p"), app %></td>
      <td><%= link_to app.status, toggle_status_appointment_path(app) %></td>

      <td><%= link_to "delete", app, method: :delete  %></td>
    </tr>
    <% end %>
  </tbody>
</table>
