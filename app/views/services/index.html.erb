<h1>All Services</h1>

<p id="notice"> <%= notice %></p>


<table>
  <th>
    <tr>
      <th>Services</th>
      <th>name</th>
      <th>price</th>
      <th>duration</th>
      <th colspan ="6"></th>
    </tr>
  </th>

  <tbody>
    <tr>
      <% @services.each do |service| %>
      <td> <%= link_to service.name, service %></td>
      <td> <%= service.price %></td>
      <td> <%= service.duration %></td>
      <td> <%= link_to "Show", service %></td>
      <td> <%= link_to "Edit", edit_service_path(service) %></td>
      <td> <%= link_to "Delete", services_path(service), method: :delete  %></td>

    </tr>
    <% end %>
  </tbody>
</table>
