<h1>All Service Appointments</h1>

<p id="notice"> <%= notice %></p>


<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Service </th>
      <th scope="col">Total</th>
      <th scope="col">Walker</th>
      <th scope="col">Dog</th>
      <th scope="col">View</th>
      <th scope="col">Book</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <% @service_appointments.each.with_index do |service_appointment, i| %>
      <th scope="row"> <%= i %> </th>
      <td> <%= link_to service_appointment.service.name, services_path %></td>
      <td> <%= service_appointment.service_total %></td>
      <td> <%= service_appointment.walker.name %></td>
      <td> <%= service_appointment.appointment.dog.name %></td>
      <td> <%= link_to "View", service_appointment %></td>
      <td> <%= link_to "Book", edit_service_appointment_path(service_appointment) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
