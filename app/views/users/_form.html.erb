<p id="notice"> <%= notice %> </p>

<%= form_for(@user) do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
    <br>
  </div>

  <div class="field">
    <b>User Role</b>
    <br>
    <%= f.radio_button :role, 'owner' %> Dog Owner <br>
    <%= f.radio_button :role, 'walker' %> Walker <br>
    <%= f.radio_button :role, 'admin' %> Administrator <br>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
