
<%= form_for(@user) do |f| %>

  <div class="field">
    <%= f.text_field :name, placeholder: "name"  %>
  </div>

  <div class="field">
    <%= f.text_field :username, placeholder: "username"  %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: "password"  %>
  </div>

  <div class="field">
    <%= f.email_field :email, placeholder: "email"  %>
    <br>
  </div>

  <div class="field">
    <b>User Role</b>
    <br>
    <%= f.radio_button :role, 'owner' %> Dog Owner <br>
    <%= f.radio_button :role, 'walker' %> Walker <br>
    <%= f.radio_button :role, 'admin' %> Administrator <br>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
