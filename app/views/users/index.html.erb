
<div class="text-center">
  <h1>All Users</h1>
</div>

<table class="table table-hover">
  <thead>
    <tr class="bg-primary">
      <th scope="col">Owners</th>
      <th scope="col">City</th>
      <th scope="col">Update</th>
      <th scope="col">Delete</th>
      <th colspan ="6"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <% @owners.each do |owner| %>
      <td> <%= owner.name %></td>
      <td> <%= owner.city %></td>
      <td> <%= link_to 'update', edit_owner_path(owner) %></td>
      <td> <%= link_to 'delete', owner, method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
  <thead>
    <tr class="bg-primary">
      <th scope="col">Walkers</th>
      <th scope="col">Experience</th>
      <th scope="col">Update</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <% @walkers.each do |walker| %>
      <td> <%= walker.name %></td>
      <td> <%= walker.experience %></td>
      <td> <%= link_to 'update', edit_walker_path(walker) %></td>
      <td> <%= link_to 'delete', walker, method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>
