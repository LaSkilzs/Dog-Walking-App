<div class="text-center">
<h1> <%= @walker.user.name %>'s Booked Appointments</h1>
<% if @walker.appointments != [] %>
  <% @walker.appointments.each do |app| %>
    <ul class="dog-pics">
      <% if app.dog != nil %>
        <li><%= app.dog.name %> | <%= link_to app.datetime.strftime("%a %b %d %-I:%M%p"), app %> <br>
          <% if !!app.dog.image_url %>
          <%= image_tag(app.dog.image_url, :size => '260x180') %>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>
<% else %>
<p>No current appointments. Why not <%= link_to "book one", new_appointment_path %>!</p>
<% end %>

<%= link_to "Book another dog", new_appointment_path %>


<hr />
<p>My Info:</p>
<div class="">
  <p>Age: <%= @walker.age %></p>
  <p>Experience: <%= @walker.experience %></p>
  <p>Dogs Owned: <%= @walker.own_dogs %></p>
</div>
<p> <%= link_to "Edit", edit_walker_path %></p>
</div>
