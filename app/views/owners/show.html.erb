<h1>Welcome to Your Home Page, <%= @owner.user.name %></h1>

  <h2>Your Dogs</h2>
  <div class="your-dogs">
  <% @owner.dogs.each do |dog| %>
  <p><%= link_to dog.name, dog %>
  <% if dog.image_url  %>
    <%= image_tag(dog.image_url, :size => '260x180') %>
    <% end %>
      <%= link_to "Edit", edit_dog_path(dog) %>
  <% end %>
  </p>
  </div>

  <h5><%= link_to "Create an Appointment", new_appointment_path %></h5>
  <h5>List of Current Appointments</h5>
  <ul>
    <% @owner.dogs.each do |dog| %>
      <li><%= dog.name %> |
        <% dog.appointments.each do |app| %>
        <%= link_to app.datetime.strftime("%a %b %d %-I:%M%p"), app %> |
        <% end %>
      </li>
    <% end %>
  </ul>

<hr />
  <h2>Your Info</h2>
  <div class="">
    <p>Address: <%= @owner.address %></p>
    <p>City: <%= @owner.city %></p>
  </div>
<%= link_to "Edit your info", edit_owner_path(@owner) %>
